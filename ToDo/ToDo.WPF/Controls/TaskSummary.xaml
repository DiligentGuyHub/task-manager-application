            <ListBox ItemsSource="{Binding Tasks}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     VirtualizingStackPanel.ScrollUnit="Pixel">
                <ListBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Update"/>
                        <MenuItem Header="Duplicate"/>
                        <MenuItem Header="Delete"/>
                    </ContextMenu>
                </ListBox.ContextMenu>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <WrapPanel Grid.Column="0">
                            <CheckBox Grid.Column="0" 
                                  IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                  VerticalContentAlignment="Top">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="2" ScaleY="2"/>
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <Grid Width="350">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBox Grid.Row="0" 
                                     FontSize="18" 
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="5 0"
                                     FontWeight="SemiBold"
                                     TextWrapping="Wrap"
                                     Text="{Binding Header}"/>
                                <TextBox Grid.Row="1"
                                     FontSize="12"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Padding="5 0"
                                     TextWrapping="Wrap"
                                     Text="{Binding Description}"/>
                            </Grid>
                            <Grid Width="120">
                                <TextBlock FontSize="18" 
                                           VerticalAlignment="Top"
                                           Text="{Binding Category}"/>
                            </Grid>
                            <Grid Width="120">
                                <Menu Background="Transparent"
                                      VerticalAlignment="Top">
                                    <MenuItem Header="{Binding Deadline}">
                                        <Calendar FirstDayOfWeek="Monday"
                                                  SelectedDate="{Binding Deadline}">
                                        </Calendar>
                                    </MenuItem>
                                </Menu>
                            </Grid>
                            <Grid Width="auto" VerticalAlignment="Top" HorizontalAlignment="Right">
                                <Image Width="35" Source="{Binding PriorityStatus}"/>
                            </Grid>
                        </WrapPanel>


                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
