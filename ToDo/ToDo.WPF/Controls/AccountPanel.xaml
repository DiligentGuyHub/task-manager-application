<UserControl x:Class="ToDo.WPF.Controls.AccountPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDo.WPF.Controls"
             xmlns:auth="clr-namespace:ToDo.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Button Foreground="{StaticResource BrushForeground}"
            Background="{StaticResource BrushPrimary_1}"
            HorizontalContentAlignment="Left"
            Padding="10">
        <StackPanel Orientation="Horizontal">
            <Border Background="White" BorderThickness="1" CornerRadius="20">
                <Image Width="35" Source="pack://application:,,,/Resources/Icons/account.png"/>
            </Border>
            <TextBlock FontSize="16" Padding="5" Text="{Binding Username}"/>
        </StackPanel>
    </Button>
</UserControl>
