<UserControl x:Class="ToDo.WPF.Controls.MainHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDo.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="{StaticResource BrushPrimary_1}" BorderThickness="0 0 0 3">
    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontSize="72" FontWeight="Bold"
                   Margin="10 10 0 0"
                   Text="{Binding actualTime}"/>
        <TextBlock Grid.Row="1" FontSize="24" FontWeight="SemiBold"
                   FontStyle="Italic"
                   Margin="10 10 0 0"
                   Text="{Binding actualGreeting}"/>
    </Grid>
    </Border>
</UserControl>
